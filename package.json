{
  "name": "photo-management-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api-gateway",
    "shared-infra/packages/*",
    "worker",
    "frontend"
  ],
  "scripts": {
    "install-all": "npm install",
    "build-all": "npm run build -ws",
    "type-check-all": "npm run type-check -ws",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js --runInBand",
    "test:performance": "jest --config jest.performance.config.js --runInBand",
    "test:all": "npm run test:integration && npm run test:e2e",
    "test:watch": "jest --config jest.integration.config.js --watch",
    "test:coverage": "jest --config jest.integration.config.js --coverage",
    "docker:up": "docker-compose -f docker-compose.e2e.yml up -d",
    "docker:down": "docker-compose -f docker-compose.e2e.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.e2e.yml logs",
    "docker:ps": "docker-compose -f docker-compose.e2e.yml ps",
    "wait-for-services": "node scripts/wait-for-services.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.6",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "minio": "^7.1.0",
    "redis": "^4.6.0",
    "sharp": "^0.33.0",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}

{
  "name": "@shared-infra/storage",
  "version": "1.0.0",
  "private": true,
  "description": "Shared infrastructure packages for photo management storage layer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "dev": "npm run dev --workspace=@shared-infra/storage-service",
    "docker:build": "docker build -t storage-service packages/storage-service",
    "docker:run": "docker run -p 3001:3001 storage-service",
    "setup": "npm install && npm run build",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.{ts,js,json}",
    "format:check": "prettier --check packages/*/src/**/*.{ts,js,json}",
    "test": "jest",
    "test:unit": "jest --selectProjects storage-core storage-client",
    "test:integration": "jest --config jest.integration.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --coverage --selectProjects storage-core storage-client",
    "test:coverage:integration": "jest --coverage --selectProjects storage-service",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --passWithNoTests --selectProjects storage-core storage-client",
    "test:core": "npm run test --workspace=@shared-infra/storage-core",
    "test:client": "npm run test --workspace=@shared-infra/storage-client",
    "test:service": "npm run test --workspace=@shared-infra/storage-service",
    "test:core:watch": "npm run test:watch --workspace=@shared-infra/storage-core",
    "test:client:watch": "npm run test:watch --workspace=@shared-infra/storage-client",
    "test:service:watch": "npm run test:watch --workspace=@shared-infra/storage-service",
    "test:clear-cache": "jest --clearCache",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "test:verbose": "jest --verbose",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080",
    "pretest": "npm run lint && npm run build",
    "posttest": "npm run coverage:report",
    "coverage:report": "echo 'Coverage reports generated in ./coverage directory'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/receipt-processor.git",
    "directory": "photo-management/shared-infra"
  },
  "keywords": [
    "storage",
    "photos",
    "minio",
    "sqlite",
    "microservice"
  ],
  "author": "Your Organization",
  "license": "MIT"
}

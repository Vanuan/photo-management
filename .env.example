# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO Configuration
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Storage Service Configuration
STORAGE_SERVICE_URL=http://storage-service:3001
SQLITE_PATH=/app/data/storage.db

# API Gateway Configuration
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# Worker Configuration
THUMBNAIL_SIZES=150,300,600
OPTIMIZATION_QUALITY=80
S3_BUCKET_NAME=images
S3_SSL_ENABLED=false
S3_FORCE_PATH_STYLE=true
JOB_QUEUE_NAME=photo-processing
JOB_WORKER_CONCURRENCY=5
JOB_ATTEMPTS=3
JOB_BACKOFF_TYPE=exponential
JOB_BACKOFF_DELAY=1000
EVENT_BUS_CHANNEL=photo-events

# Frontend Configuration
VITE_WEBSOCKET_URL=ws://localhost:3000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Node Environment
NODE_ENV=development
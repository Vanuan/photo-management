{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared-infra/event-bus": ["../shared-infra/packages/event-bus/src"],
      "@shared-infra/job-queue": ["../shared-infra/packages/job-queue/src"],
      "@shared-infra/storage-client": ["../shared-infra/packages/storage-client/src"]
    }
  },
  "include": ["./src/**/*.ts", "./index.ts"],
  "exclude": ["node_modules", "dist"]
}
